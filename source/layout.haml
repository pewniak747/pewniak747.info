<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %link{href: '/feed.xml', rel: 'alternate', type: 'application/rss+xml', title: 'Tomasz Pewiński\'s blog'}
    %link{rel: 'shortcut icon', href: '/favicon.ico'}
    %link{href: 'http://fonts.googleapis.com/css?family=Enriqueta', rel: 'stylesheet', type: 'text/css'}
    %link{type: 'text/css', rel: 'stylesheet', href: '/stylesheets/syntax.css'}
    %link{type: 'text/css', rel: 'stylesheet', href: '/stylesheets/style.css'}
    %title= "#{is_blog_article? ? "#{current_article.title} | " : ""}Tomasz Pewiński"
  %body
    %a{href: "http://github.com/pewniak747", target: "_blank"}
      %img{style: "position: absolute; top: 0; right: 0; border: 0;", src: "https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png", alt: "Fork me on GitHub"}
    #container
      #header
        %a#home{href: '/'}
          %h1 Tomasz Pewinski &nbsp;
        #nav
          %ul
            %li
              %a{href: '/'}blog
            &middot;
            %li
              %a{href: '/about'}about me
            &middot;
            %li
              %a{href: 'http://twitter.com/pewniak747', target: '_blank'}twitter
            &middot;
            %li
              %a{href: 'http://github.com/pewniak747', target: '_blank'}github
      #content
        #blog
          - if is_blog_article?
            - content_for :blog_article, yield
            = partial 'article_template'
          - else
            = yield
      .clearfix
